<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <!-- 1. elastic 单点服务器,只存在一个elastic的服务器 -->
    <bean id="elasticPool" class="com.application.base.all.elastic.elastic.client.ElasticPool">
        <constructor-arg name="poolConfig" ref="elasticPoolConfig"/>
        <constructor-arg name="clusterName" value="${elastic.cluster.name}"/>
        <constructor-arg name="host" value="${elastic.host}"/>
        <constructor-arg name="port" value="${elastic.port}"/>
    </bean>
    <bean id="elasticFactory" class="com.application.base.all.elastic.elastic.factory.ElasticSessionOperateFactory">
        <property name="elasticPool" ref="elasticPool"/>
    </bean>

</beans>

